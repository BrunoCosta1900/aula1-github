package exercicioVetor;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import entitiesVetor.ProgramaFuncionarios;

public class Funcionarios {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		System.out.println("Quantas operações seráo registradas?");

		int n = sc.nextInt();

		List<ProgramaFuncionarios> list = new ArrayList<>();

		for (int i = 0; i <= n; i++) {

			System.out.print("Id: ");
			sc.nextLine();
			int id = sc.nextInt();
			sc.nextLine();
			System.out.print("Nome:");
			String nome = sc.nextLine();
			System.out.println("Salário: ");
			double salario = sc.nextDouble();
			System.out.println();
			vect[i] = new ProgramaFuncionarios(id, nome, salario);
		}

		System.out.print("Digite o Id que deseja acresentar o salário: ");

		Integer id = sc.nextInt();

		if (vect[id] == null) {
			System.out.println("Id não existe");
		} else {
			System.out.print("Entre com a porcentagem: ");

		}

		for (int i = 0; i < vect.length; i++) {
			System.out.println(vect[i]);
		}

		sc.close();
	}

}
