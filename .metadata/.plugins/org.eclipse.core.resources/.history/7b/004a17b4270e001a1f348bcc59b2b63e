package exercicioVetor;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import entitiesVetor.ProgramaFuncionarios;

public class Funcionarios {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		System.out.println("Quantas operações seráo registradas?");

		int n = sc.nextInt();

		List<ProgramaFuncionarios> list = new ArrayList<ProgramaFuncionarios>();

		for (int i = 0; i <= n; i++) {

			System.out.print("Id: ");
			sc.nextLine();
			int id = sc.nextInt();
			sc.nextLine();
			System.out.print("Nome:");
			String nome = sc.nextLine();
			System.out.println("Salário: ");
			double salario = sc.nextDouble();
			System.out.println();
			list.add(new ProgramaFuncionarios(id, nome, salario));
		}

		System.out.println();
		System.out.print("Digite o Id que deseja acresentar o salário: ");

		int id = sc.nextInt();

